<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BlueButton" parent="Widget.AppCompat.Button">
    <item name="android:background">@drawable/blue_button</item>
    <item name="android:textColor">#000000</item>
    <item name="android:backgroundTint">@null</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_margin">4dp</item>
    <item name="android:padding">10dp</item>
</style>
    <style name="BlackButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="DetailTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_bg</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
</resources>