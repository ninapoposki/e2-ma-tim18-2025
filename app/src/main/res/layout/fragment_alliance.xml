<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_alliance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Ime saveza -->
    <TextView
        android:id="@+id/text_alliance_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alliance Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <!-- Lider saveza -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/image_leader_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar1"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:contentDescription="Leader avatar"/>

        <TextView
            android:id="@+id/text_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leader: "
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_disband_alliance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ukini savez"
        android:visibility="gone"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"/>


    <Button
        android:id="@+id/button_start_mission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Special Mission"
        android:visibility="gone"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />


    <TextView
        android:id="@+id/text_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members:"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="8dp"/>

    <LinearLayout
        android:id="@+id/layout_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="8dp"/>

    <!-- Lista poruka (RecyclerView za chat) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_alliance_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <!-- Polje za unos poruke -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <EditText
            android:id="@+id/edit_message"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Type a message"/>

        <Button
            android:id="@+id/button_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"/>
    </LinearLayout>

</LinearLayout>
