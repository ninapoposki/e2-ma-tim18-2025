<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#000000"> <!-- crna pozadina -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:textColor="#FFFFFF"
            android:hintTextColor="#80CFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:hint="Lozinka"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:textColor="#FFFFFF"
            android:hintTextColor="#80CFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etRepeatPassword"
            android:hint="Ponovite lozinku"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:textColor="#FFFFFF"
            android:hintTextColor="#80CFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etUsername"
            android:hint="Korisničko ime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:textColor="#FFFFFF"
            android:hintTextColor="#80CFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Izaberite avatara:"
            android:textColor="#80CFFF"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button android:id="@+id/btnAvatar1" android:text="Avatar 1" style="@style/BlueButton"/>
            <Button android:id="@+id/btnAvatar2" android:text="Avatar 2" style="@style/BlueButton"/>
            <Button android:id="@+id/btnAvatar3" android:text="Avatar 3" style="@style/BlueButton"/>
            <Button android:id="@+id/btnAvatar4" android:text="Avatar 4" style="@style/BlueButton"/>
            <Button android:id="@+id/btnAvatar5" android:text="Avatar 5" style="@style/BlueButton"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:text="Registruj se"
            style="@style/BlueButton"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
